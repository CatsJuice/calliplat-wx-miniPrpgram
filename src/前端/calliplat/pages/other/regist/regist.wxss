/* pages/other/regist/regist.wxss */
.body{
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
}
.head{
  width: 100%;
  flex-grow: 0;
  flex-shrink: 0;
}
.head .big-title{
  width: 90%;
  padding: 10px 5% 0px 5%;
  font-size: 50rpx;
  font-weight: bold;
}
.head .small-title{
  width: 90%;
  padding: 5px 5% 0 5%;
  font-size: 28rpx;
  color: #bdbdbd;
}



.regist-form{
  flex-grow: 1;
  /* background: #3dac74; */
  display: flex;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.regist-form .input-item{
  width: 90%;
}
.regist-form .input-item .input-tag{
  width: 100%;
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-weight: bold;
}
.regist-form .input-item>input{
  width: 96%;
  border-radius: 0px;
  padding-left: 2%;
  padding-right: 2%;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.regist-form .input-item .ckCode{
  display: flex;
  flex-direction: row;
}
.regist-form .input-item .ckCode input{
  height: 80rpx;
  padding-left: 2%;
  padding-right: 2%;
  font-size: 30rpx;
  line-height: 80rpx;
  flex-grow: 1;
}
.regist-form .input-item .ckCode .ckCode-button{
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
  margin-left: 10px;
  border: 2px solid #2f2f2f;
  background: #2f2f2f;
  color: #fff;
  font-weight: bold;
}

.input-normal{
  border: 2px solid #9b9b9b;
}
.input-focus{
  border: 2px solid #000;
}
.input-correct{
  border: 2px solid #3dac74;
}
.input-error{
  border: 2px solid #ce4e5a;
}
.mail-words{
  width: 90%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #9b9b9b;
}

.submit-button-container{
  flex-grow: 1;
  padding: 3px;
  margin-top: 60rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #2f2f2f;
  border: 2px solid #2f2f2f;
  transition: all 0.3s ease;
}
.submit-button-container .submit-button{
  width: 100%;
  height: 100%;
  background: #2f2f2f;
  color: #fff;
  line-height: 90rpx;
  text-align: center;
  
}.submit-button-container:hover{
  background: #fff;
  border: 2px solid #2f2f2f;
  transition: all 0.3s ease;
}