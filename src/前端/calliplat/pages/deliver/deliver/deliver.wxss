/* pages/deliver/deliver.wxss */
page{
  /* background-color: #e67272; */
  background-image: linear-gradient(0deg, #e67272 0%, #f85555 100%);
}
.body{
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  align-items: stretch;
  /* justify-content: center; */
}
.head{
  width: 100%;
  flex-grow: 0;
  flex-shrink: 0;
  /* background-color: #000; */
}
.head .big-title{
  width: 90%;
  color: #fff;
  padding: 0 5% 0px 5%;
  font-size: 50rpx;
  font-weight: bold;
}
.head .small-title{
  width: 90%;
  padding: 5px 5% 0 5%;
  font-size: 28rpx;
  color: #f6f6f6;
}


/**
 * 发布
 */
.delievr-card{
  background: #fff;
  border-radius: 5px;
  overflow: hidden;
  flex-grow: 1;
  margin: 20rpx;
  box-shadow: 2px -5px 10px rgba(50, 50, 50, 0.3);
  display: flex;

  flex-direction: column;
  padding: 0rpx 20rpx;
}
/* 动画 */
.card-show-up{
  animation: card-show-up 1s ease 0s 1 normal;
  animation-fill-mode: forwards;
}
@keyframes card-show-up{
  0%{
    margin-top: 100vh;
  }
  100%{
    margin-top: 20rpx;    
  }
}

.delievr-card .input-item{
  flex-grow: 0;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  margin-top: 10rpx;
}
.delievr-card .input-item .input-tag{
  padding-left: 10px;
  border-left: 8px solid #f85555;
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-weight: bold;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
}.delievr-card .input-item input{
  padding: 0 20px;
  background: #f1f1f1;
  border-radius: 5px;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  font-weight: bold;
}
.input-placeholder{
  color: #bdbdbd;
}
.delievr-card .input-item textarea{
  background: #f1f1f1;
  border-radius: 5px;
  height: 200rpx;
  font-size: 30rpx;
  width: auto;
  padding: 20px;
}
.textarea-placeholder{
  color: #bdbdbd;
}
.delievr-card .input-item .add-img{
  background: #f1f1f1;
  flex-grow: 1;
  border-radius: 5px;
  display: flex;
  padding: 0;
  height: 130rpx;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
#pick_img{
  flex-grow: 1;
}
/* 图片选择前：图标 */
.delievr-card .input-item .add-img .before-chose{
  width: 100rpx;
  height: 100rpx;
}
/* 图片选择后：图片 */
.delievr-card .input-item .add-img .after-chose{
  width: 100%;
  height: 100%;
}
.delievr-card .deliver-button-container{
  width: auto;
  flex-grow: 0;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  /* background: #ff0000; */
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: center;
}.delievr-card .deliver-button-container .deliver-button{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  background-color: #f85555;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  align-items: center;
}.delievr-card .deliver-button-container .deliver-button image{
  width: 50%;
  height: 50%;
}